<%= form_for(@research) do |f| %>
  <% if @research.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@research.errors.count, "error") %> prohibited this research from being saved:</h2>

      <ul>
      <% @research.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <% if !mobile_device? %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title, :size => "50" %>
	</div>
	<div class="field">
		<%= f.label :content %><br>
		<%= f.text_area :content, :cols => "75", :rows => "10" %>
	</div>
  <% else %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title, :size => "50", :class => "form_text" %>
	</div>
	<div class="field">
		<%= f.label :content %><br>
		<%= f.text_area :content, :cols => "75", :rows => "10", :class => "form_text" %>
	</div>
  <% end %>
  
  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>